@startuml

left to right direction

actor "Visitante" as visitante

package "Gestión de Ubicación"{
    usecase verUbicacionActual as "verUbicacionActual()"
    usecase cambiarDeUbicacion as "cambiarDeUbicacion()"
    usecase buscarUbicacion as "buscarUbicacion()"
    usecase verDetallesUbicación as "verDetallesUbicacion()"
    usecase verUbicacionesCercanas as "verUbicacionesCercanas()"
    usecase verUbicacionesPlanta as "verUbicacionesPlanta()"
}

package "Gestión de Recorrido"{
    usecase verRecorridosDisponibles as "verRecorridosDisponibles()"
    usecase salirrRecorrido as "salirRecorrido()"
    usecase seleccionarRecorrido as "seleccionarRecorrido()"
}

visitante --> (verUbicacionActual)
visitante --> (cambiarDeUbicacion)
visitante --> (buscarUbicacion)
visitante --> (verDetallesUbicación)
visitante --> (verUbicacionesCercanas)
visitante --> (verUbicacionesPlanta)

(seleccionarRecorrido) <-- visitante
(verRecorridosDisponibles) <-- visitante
(salirrRecorrido) <-- visitante
@enduml